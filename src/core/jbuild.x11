   (c_names     (utils atoms_stubs display_stubs event_stubs
                 glx_stubs mouse_stubs keyboard_stubs window_stubs 
                 utils_stubs))
   (c_flags     (:standard (:include ../../c_flags.os)))
   (c_library_flags (:include ../../c_libs.os))))
