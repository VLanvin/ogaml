(jbuild_version 1)

(rule (copy x11/x11.ml                 x11.ml))
(rule (copy x11/x11.mli                x11.mli))
(rule (copy x11/stubs/atoms_stubs.c    atoms_stubs.c))
(rule (copy x11/stubs/event_stubs.c    event_stubs.c))
(rule (copy x11/stubs/keyboard_stubs.c keyboard_stubs.c))
(rule (copy x11/stubs/utils.c          utils.c))
(rule (copy x11/stubs/utils_stubs.c    utils_stubs.c))
(rule (copy x11/stubs/display_stubs.c  display_stubs.c))
(rule (copy x11/stubs/glx_stubs.c      glx_stubs.c))
(rule (copy x11/stubs/mouse_stubs.c    mouse_stubs.c))
